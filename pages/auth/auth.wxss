.UCenter-bg {
  padding-top: 150rpx;
  background-image: url(https://yhtx.itianc.com/wxxcx/57b6c21fa72901.jpg);
  background-size: cover;
  height: 600rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0,0,0,0.3);
}
