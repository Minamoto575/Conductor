.box{
  position: relative;
  left: 30px;
  right: 30px;
  width: 80%;
}
.UCenter-bg::after {
 content: "";
 position: absolute;
 width: 100vw;
 height: 50vw;
 background-color: #f1f1f1;
 transform: rotate(-10deg) scale(2,2);
 bottom: -60vw;
 left: 0;
 right: 0;
 margin: auto;
}
.UCenter-bg text{
  opacity: 0.8;
}
.UCenter-bg image {
  width: 250rpx;
  height: 250rpx;
}
